<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9F1DF"
    tools:context=".NormalActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/appBarColor"
        android:weightSum="3">

       <!-- <ImageView
            android:id="@+id/menuHamburgerNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="menu"
            android:focusable="true"
            android:src="@drawable/baseline_menu_24" />-->

        <!--<ImageView
            android:id="@+id/backArrowNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="back"
            android:focusable="true"
            android:src="@drawable/baseline_undo_24" />-->


        <ImageView
            android:id="@+id/replayGameNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="replay"
            android:focusable="true"
            android:src="@drawable/baseline_replay_24" />

        <TextView
            android:id="@+id/timeGameNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pauseGameNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="pause"
            android:focusable="true"
            android:src="@drawable/baseline_motion_paused_24" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/button_1n"
            style="@style/buttons"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:tag="0:0"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_2n"
            style="@style/buttons"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_1n"
            android:gravity="center"
            android:tag="0:1"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_3n"
            style="@style/buttons"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_2n"
            android:gravity="center"
            android:tag="0:2"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_4n"
            style="@style/buttons"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_3n"
            android:tag="0:3"
            android:gravity="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_5n"
            style="@style/buttons"
            android:layout_below="@id/button_1n"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:tag="1:0"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_6n"
            style="@style/buttons"
            android:layout_below="@id/button_2n"
            android:layout_toEndOf="@id/button_5n"
            android:gravity="center"
            android:tag="1:1"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_7n"
            style="@style/buttons"
            android:layout_below="@id/button_3n"
            android:layout_toEndOf="@id/button_6n"
            android:tag="1:2"
            android:gravity="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_8n"
            style="@style/buttons"
            android:layout_below="@id/button_4n"
            android:layout_toEndOf="@id/button_7n"
            android:gravity="center"
            android:tag="1:3"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_9n"
            style="@style/buttons"
            android:layout_below="@id/button_5n"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:tag="2:0"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_10n"
            style="@style/buttons"
            android:layout_below="@id/button_6n"
            android:layout_toEndOf="@id/button_9n"
            android:gravity="center"
            android:tag="2:1"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_11n"
            style="@style/buttons"
            android:layout_below="@id/button_7n"
            android:tag="2:2"
            android:layout_toEndOf="@id/button_10n"
            android:gravity="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_12n"
            style="@style/buttons"
            android:layout_below="@id/button_8n"
            android:tag="2:3"
            android:layout_toEndOf="@id/button_11n"
            android:gravity="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_13n"
            style="@style/buttons"
            android:layout_below="@id/button_9n"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:tag="3:0"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_14n"
            style="@style/buttons"
            android:layout_below="@id/button_10n"
            android:layout_toEndOf="@id/button_13n"
            android:tag="3:1"
            android:gravity="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_15n"
            style="@style/buttons"
            android:layout_below="@id/button_11n"
            android:layout_toEndOf="@id/button_14n"
            android:gravity="center"
            android:tag="3:2"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/button_16n"
            style="@style/buttons"
            android:layout_below="@id/button_12n"
            android:tag="3:3"
            android:gravity="center"
            android:textSize="60sp"
            android:layout_toEndOf="@id/button_15n" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emptyLayoutNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="100sp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#08A9F1DF"
            android:gravity="center"
            android:text="PAUSE"
            android:textColor="#F3ECEC"
            android:textSize="50sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/helpGameNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:clickable="true"
        android:contentDescription="Help"
        android:focusable="true"
        android:src="@drawable/baseline_live_help_24" />
</FrameLayout>