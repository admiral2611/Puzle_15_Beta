<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinViewActivity">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/img_1" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginBottom="110dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/monchila"
            android:text="You Win!"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dificulWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="60sp"
            android:fontFamily="@font/wedges"
            android:text="Normal"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/super_ground_demo"
            android:text="Step"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stepWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20sp"
            android:fontFamily="@font/super_ground_demo"
            android:text="00"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/super_ground_demo"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timeWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/super_ground_demo"
            android:text="00:00:00"
            android:textColor="#fff"
            android:textSize="30sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/textEdit"
        android:layout_width="280dp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:background="#A6FFFFFF"
        android:drawableStart="@drawable/round_person_outline_24"
        android:hint="Enter\tyour\tname"
        android:maxLength="50"
        android:paddingStart="20sp"
        android:textColorHint="#fff" />

    <!--save button-->
    <Button
        android:id="@+id/menuSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape_save_corner"
        android:fontFamily="@font/super_ground_demo"
        android:text="Save"
        android:textColor="#fff"
        android:textSize="20sp" />

    <!--menu button-->
    <Button
        android:id="@+id/menuBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50sp"
        android:background="@drawable/start_shape_button"
        android:fontFamily="@font/super_ground_demo"
        android:text="Menu"
        android:textColor="#fff"
        android:textSize="20sp" />


</FrameLayout>