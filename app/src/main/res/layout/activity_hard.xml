<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HardActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/appBarColor"
        android:weightSum="3">

        <!--<ImageView
            android:id="@+id/menuHamburger"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="menu"
            android:focusable="true"
            android:src="@drawable/baseline_menu_24" />-->

        <!--   <ImageView
               android:id="@+id/backArrow"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10sp"
               android:layout_weight="1"
               android:clickable="true"
               android:contentDescription="back"
               android:focusable="true"
               android:src="@drawable/baseline_undo_24" />-->

        <ImageView
            android:id="@+id/replayGameHard"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="replay"
            android:focusable="true"
            android:src="@drawable/baseline_replay_24" />

        <TextView
            android:id="@+id/timeGameHard"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pauseGameHard"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="pause"
            android:focusable="true"
            android:src="@drawable/baseline_motion_paused_24" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/button_1n"
            style="@style/hard_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:tag="0:0" />

        <TextView
            android:id="@+id/button_2n"
            style="@style/hard_button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_1n"
            android:tag="0:1" />

        <TextView
            android:id="@+id/button_3n"
            style="@style/hard_button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_2n"
            android:tag="0:2" />

        <TextView
            android:id="@+id/button_4n"
            style="@style/hard_button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_3n"
            android:tag="0:3" />

        <TextView
            android:id="@+id/button_5n"
            style="@style/hard_button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/button_4n"
            android:tag="0:4" />

        <!--
                2chi qator
        -->

        <TextView
            android:id="@+id/button_6n"
            style="@style/hard_button"
            android:layout_below="@id/button_1n"
            android:layout_alignParentStart="true"
            android:tag="1:0" />

        <TextView
            android:id="@+id/button_7"
            style="@style/hard_button"
            android:layout_below="@id/button_2n"
            android:layout_toEndOf="@id/button_6n"
            android:tag="1:1" />

        <TextView
            android:id="@+id/button_8"
            style="@style/hard_button"
            android:layout_below="@id/button_3n"
            android:layout_toEndOf="@id/button_7"
            android:tag="1:2" />

        <TextView
            android:id="@+id/button_9"
            style="@style/hard_button"
            android:layout_below="@id/button_4n"
            android:layout_toEndOf="@id/button_8"
            android:tag="1:3" />

        <TextView
            android:id="@+id/button_10"
            style="@style/hard_button"
            android:layout_below="@id/button_5n"
            android:layout_toEndOf="@id/button_9"
            android:tag="1:4" />

        <!--
        3chi qator
        -->

        <TextView
            android:id="@+id/button_11"
            style="@style/hard_button"
            android:layout_below="@id/button_6n"
            android:layout_alignParentStart="true"
            android:tag="2:0" />

        <TextView
            android:id="@+id/button_12"
            style="@style/hard_button"
            android:layout_below="@id/button_7"
            android:layout_toEndOf="@id/button_11"
            android:tag="2:1" />

        <TextView
            android:id="@+id/button_13"
            style="@style/hard_button"
            android:layout_below="@id/button_8"
            android:layout_toEndOf="@id/button_12"
            android:tag="2:2" />

        <TextView
            android:id="@+id/button_14"
            style="@style/hard_button"
            android:layout_below="@id/button_9"
            android:layout_toEndOf="@id/button_13"
            android:tag="2:3" />

        <TextView
            android:id="@+id/button_15"
            style="@style/hard_button"
            android:layout_below="@id/button_10"
            android:layout_toEndOf="@id/button_14"
            android:tag="2:4" />

        <!--4chi qator-->

        <TextView
            android:id="@+id/button_16"
            style="@style/hard_button"
            android:layout_below="@id/button_11"
            android:layout_alignParentStart="true"
            android:tag="3:0" />

        <TextView
            android:id="@+id/button_17"
            style="@style/hard_button"
            android:layout_below="@id/button_12"
            android:layout_toEndOf="@id/button_16"
            android:tag="3:1" />

        <TextView
            android:id="@+id/button_18"
            style="@style/hard_button"
            android:layout_below="@id/button_13"
            android:layout_toEndOf="@id/button_17"
            android:tag="3:2" />

        <TextView
            android:id="@+id/button_19"
            style="@style/hard_button"
            android:layout_below="@id/button_14"
            android:layout_toEndOf="@id/button_18"
            android:tag="3:3" />

        <TextView
            android:id="@+id/button_20"
            style="@style/hard_button"
            android:layout_below="@id/button_15"
            android:layout_toEndOf="@id/button_19"
            android:tag="3:4" />

        <!--5chi qator-->

        <TextView
            android:id="@+id/button_21"
            style="@style/hard_button"
            android:layout_below="@id/button_16"
            android:layout_alignParentStart="true"
            android:tag="4:0" />

        <TextView
            android:id="@+id/button_22"
            style="@style/hard_button"
            android:layout_below="@id/button_17"
            android:layout_toEndOf="@id/button_21"
            android:tag="4:1" />

        <TextView
            android:id="@+id/button_23"
            style="@style/hard_button"
            android:layout_below="@id/button_18"
            android:layout_toEndOf="@id/button_22"
            android:tag="4:2" />

        <TextView
            android:id="@+id/button_24"
            style="@style/hard_button"
            android:layout_below="@id/button_19"
            android:layout_toEndOf="@id/button_23"
            android:tag="4:3" />

        <TextView
            android:id="@+id/button_25"
            style="@style/hard_button"
            android:layout_below="@id/button_20"
            android:layout_toEndOf="@id/button_24"
            android:tag="4:4"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emptyLayoutHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#08A9F1DF"
            android:gravity="center"
            android:text="PAUSE"
            android:textColor="#F3ECEC"
            android:textSize="50sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/helpGameHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:clickable="true"
        android:contentDescription="Help"
        android:focusable="true"
        android:src="@drawable/baseline_live_help_24" />
</FrameLayout>