<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">

   <ImageView
       android:layout_width="match_parent"
       android:src="@drawable/img"
       android:scaleType="centerCrop"
       android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="480dp"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <!--info-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="90sp"
            android:text="Product\t\tBy"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--admiral-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="150sp"
            android:fontFamily="@font/moleth_demo"
            android:text="admiral"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50sp">

            <!--telegram-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="20sp"
                android:text="Telegram"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:textColor="#fff"
                android:fontFamily="@font/wedges"
                android:text="admiral_9726"
                android:textSize="20sp" />

            <!--instagram-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="60sp"
                android:text="Instagram"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="60sp"
                android:layout_marginEnd="20sp"
                android:textColor="#fff"
                android:fontFamily="@font/wedges"
                android:text="admiral_9726"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="2023-Isystem\t\tAcademy"
                android:textColor="#fff"
                android:textStyle="bold" />

            <!--tel-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="100sp"
                android:text="Tel:"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="100sp"
                android:textColor="#fff"
                android:layout_marginEnd="20sp"
                android:fontFamily="@font/wedges"
                android:text="+998900596420"
                android:textSize="20sp" />

        </FrameLayout>
    </FrameLayout>

</FrameLayout>